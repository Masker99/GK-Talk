<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rookie.gktalk.mapper.ArticleMapper">
    <resultMap id="ArticleResult" type="article">
        <id property="artic_id" column="artic_id"/>
    </resultMap>

    <insert id="addOne" parameterType="article">
        insert article(artic_id,artic_title,artic_content,artic_author,artic_date) values (#{artic_id},#{artic_title},#{artic_content},#{artic_author},#{artic_date});
    </insert>

    <select id="selectOneByArticleID" parameterType="int">
        select * from article where artic_id = #{artic_id};
    </select>

    <select id="selectAll">
        select a.artic_id,a.artic_title,a.artic_content,u.name,a.artic_date from
        article a inner join user u
        on a.artic_author = u.userID;
    </select>
</mapper>
